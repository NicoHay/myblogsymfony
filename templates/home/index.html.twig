{% extends 'base.html.twig' %}

{% block title %}HomePage{% endblock %}

{% block body %}


    <div class="row mt-5">
        {% for post in posts %}
            <div class="col-md-4 mt-2 mb-2">
                <div class="card" >
                    <img src="https://placeimg.com/640/480/any" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.content}}</p>
                        <p class="card-text">{{ post.author}} - Cr√©e le {{ post.createdAt | date("d/m/Y") }}</p>
                        <a href="/posts/{{ post.id }}" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}
