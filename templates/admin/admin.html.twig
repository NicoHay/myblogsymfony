{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}

   <div class=" container ">


      <h1>ADMIN PAGE</h1>


      <table class="table mt-5 ">
         <thead>
         <tr>
            <th scope="col">Titre</th>
            <th scope="col">Auteur</th>
            <th scope="col">Date</th>
            <th scope="col">Actions</th>

         </tr>
         </thead>
         <tbody>
         {% for post in posts %}

            <tr>
               <td>{{ post.title }}</td>
               <td>{{ post.author }}</td>
               <td>{{ post.createdAt | date("d/m/Y") }}</td>
               <td>
                  <a href="/admin/delete/{{ post.id }}" class="btn btn-danger"><span class="oi oi-trash"></span></a>
                  <a href="/admin/update/{{ post.id }}" class="btn btn-success"><span class="oi oi-pencil"></span></a>
               </td>
            </tr>

         {% endfor %}


         </tbody>
      </table>

   </div>


{% endblock %}
